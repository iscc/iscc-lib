{
  "name": "iscc-lib",
  "build": {
    "dockerfile": "Dockerfile",
    "args": {
      "TZ": "${localEnv:TZ:UTC}",
      "CLAUDE_CODE_VERSION": "latest"
    }
  },
  "remoteUser": "dev",
  "mounts": [
    "source=${localEnv:USERPROFILE}/.claude,target=/home/dev/.claude,type=bind",
    "source=${localEnv:USERPROFILE}/.claude.json,target=/home/dev/.claude.json,type=bind",
    "source=${localEnv:USERPROFILE}/.gitconfig,target=/home/dev/.gitconfig,type=bind,readonly",
    "source=iscc-lib-bashhistory-${devcontainerId},target=/commandhistory,type=volume",
    "source=iscc-lib-cargo-registry-${devcontainerId},target=/home/dev/.cargo/registry,type=volume",
    "source=iscc-lib-cargo-git-${devcontainerId},target=/home/dev/.cargo/git,type=volume",
    "source=iscc-lib-uv-cache-${devcontainerId},target=/home/dev/.cache/uv,type=volume",
    "source=iscc-lib-venv-${devcontainerId},target=/home/dev/.venvs/iscc-lib,type=volume"
  ],
  "containerEnv": {
    "NODE_OPTIONS": "--max-old-space-size=4096",
    "GH_TOKEN": "${localEnv:GH_TOKEN}",
    "UV_PROJECT_ENVIRONMENT": "/home/dev/.venvs/iscc-lib",
    "GIT_CONFIG_COUNT": "1",
    "GIT_CONFIG_KEY_0": "commit.gpgsign",
    "GIT_CONFIG_VALUE_0": "false"
  },
  "postCreateCommand": "sudo chown -R dev:dev /home/dev/.venvs /home/dev/.cargo/registry /home/dev/.cargo/git && mise trust && uv sync && uv run prek install --hook-type pre-commit --hook-type pre-push",
  "workspaceMount": "source=${localWorkspaceFolder},target=/workspace/iscc-lib,type=bind,consistency=delegated",
  "workspaceFolder": "/workspace/iscc-lib"
}
